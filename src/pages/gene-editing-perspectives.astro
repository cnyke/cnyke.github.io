---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Gene Editing Perspectives - Resilience Continuum" description="Interactive installation exploring public opinion on gene editing technologies">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back Navigation -->
    <div class="mb-8">
      <a href="/graphic-design" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
        ← Back to Graphic Design
      </a>
